store = []
temp = ""
old = True

with open("testi.txt", "r") as readFile:
    for line in readFile:
        if old == False:
            store.append(temp)        
        elif line[0] == "*":
            temp = ""
            temp += line.rstrip()
            nextLine = readFile.next()
            if nextLine[0] != "*":
                old = True
            else:
                old = False
        elif old == True:
            temp += line.rstrip()
            nextLine = readFile.next()
            if nextLine[0] != "*":
                old = True
            else:
                old = False

        print temp
        
print store